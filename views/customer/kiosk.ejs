<!DOCTYPE html>
<head>
    <title>Customer Order</title>
    <link id="StyleSheetID" rel="stylesheet" href="/Main1.css">
</head>
<body>
    <div class="navbar">
        <img src="/pom_honey_logo.png" id="pom_logo">
        <a href="/customer/storelocation"><div id="nav_storelocation">Home</div></a>
        <a href="/customer/menu"><div id="nav_menu">Menu</div></a>
        <a href="/customer/kiosk"><div id="nav_kiosk">Order</div></a>
        <script>
            function StyleChange(){
              var link = document.getElementById("StyleSheetID"); 
              PageStyle = localStorage.getItem('CurrentStyle');
              if(PageStyle == 'Main1'){
                  link.setAttribute('href', '/Main1.css')
              }
              else if(PageStyle == 'Main2'){
                  link.setAttribute('href', '/Main2.css')
              }
              else if (PageStyle == null){
                  link.setAttribute('href', '/Main1.css')
                  localStorage.setItem('CurrentStyle', 'Main1');
              }
          }
          StyleChange();
          </script>
          <script>
            function button2(){
              var link = document.getElementById("StyleSheetID"); 
              if(link.getAttribute("href") == "/Main1.css"){
                link.setAttribute("href", "/Main2.css"); 
                localStorage.setItem('CurrentStyle', 'Main2');
              } 
              else if(link.getAttribute("href") == "/Main2.css"){
                link.setAttribute("href", "/Main1.css"); 
                localStorage.setItem('CurrentStyle', 'Main1');
              }
          }
        </script>   
          <a><button class="button_nav" onclick="button2()">Style Change</button></a>
    </div>
    <div class="item_div">
    <% for (var i in items) { %>
        <form action="additem" method="post">
            <label for="item"></label>
            <input id="item" type="hidden" name="item" value="<%=i%>">
            <input class="item_button" type="submit" value="<%=items[i].itemname%>">
        </form>
    <% } %>
    </div>
    <div class="receipt_div">
    <div class="receipt">
    <% price = 0 %>
    <% for (var i in items1) {%>
        <% price += items[items1[i][0]].price %>
        <p class="receipt_text"><%=items[items1[i][0]].itemname%>, <%=items[items1[i][0]].price%><p>
    <% } %>
    <p class="receipt_text">Total: $<%=price%></p>
        <% price += items[items1[i][0]].price*100 %>
        <p><%=items[items1[i][0]].itemname%>, <%=items[items1[i][0]].price%><p>
    <% } %>
    <p>Total: $<%=price/100%></p>
        </div>
    <div class = "receipt_button_wrapper">
    <form action="kiosk" method="post">
        <label for="removeitems"></label>
        <input id="removeitems" type="hidden" name="removeitems" value="0"/>
