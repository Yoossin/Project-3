<!DOCTYPE html>
<head>
    <title>Add Item</title>
    <link rel="stylesheet" href="/Main1.css">
    <script defer src="/additem_script.js"></script>
</head>
<body>
    <nav id="nav_bar">
        <img src="/pom_honey_logo.png" id="pom_logo">
        <a href="menu"><div id="nav_storeOrders">Menu</div></a>
    </nav>
    
    <div id="form_wrapper">
        <div id="error"></div>
        <form action="additem" method="post" id="additem_form">
            <label for="itemname">Item Name</label>
            <input id="itemname" type="text" name="itemname" required/>
            <label for="itemprice">Item Price</label>
            <input id="itemprice" type="text" name="itemprice" required/>
            <label for="ingredientids">Ingredient IDs</label>
            <input id="ingredientids" type="text" name="ingredientids" required/>
            <input type="submit" value="Add Item" id="submit_button"/>
        </form>
    </div>

    <div id="google_translate_element"></div>
 
    <script type="text/javascript">
        function googleTranslateElementInit() {
            new google.translate.TranslateElement(
                {pageLanguage: 'en'},
                'google_translate_element'
            );
        }
    </script>
 
    <script type="text/javascript"
            src=
"https://translate.google.com/translate_a/element.js?
cb=googleTranslateElementInit">
