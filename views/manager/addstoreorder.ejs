<!DOCTYPE html>
<head>
    <title>Add Store Order</title>
    <link id="StyleSheetID" rel="stylesheet" href="/Main1.css">
</head>
<body>
    <div class="navbar">
        <img src="/pom_honey_logo.png" id="pom_logo">
        <a href="storeorder"><div id="nav_storeOrders">Store Orders</div></a>
        <script>
            function StyleChange(){
              var link = document.getElementById("StyleSheetID"); 
              PageStyle = localStorage.getItem('CurrentStyle');
              if(PageStyle == 'Main1'){
                  link.setAttribute('href', '/Main1.css')
              }
              else if(PageStyle == 'Main2'){
                  link.setAttribute('href', '/Main2.css')
              }
              else if (PageStyle == null){
                  link.setAttribute('href', '/Main1.css')
                  localStorage.setItem('CurrentStyle', 'Main1');
              }
          }
          StyleChange();
          </script>
          <script>
            function button2(){
              var link = document.getElementById("StyleSheetID"); 
              if(link.getAttribute("href") == "/Main1.css"){
                link.setAttribute("href", "/Main2.css"); 
                localStorage.setItem('CurrentStyle', 'Main2');
              } 
              else if(link.getAttribute("href") == "/Main2.css"){
                link.setAttribute("href", "/Main1.css"); 
                localStorage.setItem('CurrentStyle', 'Main1');
              }
          }
        </script>   
          <a><button class="button_nav" onclick="button2()">Style Change</button></a>
    </div>

    <div id="form_wrapper">
        <form action="addstoreorder" method="post">
            <label for="orderplaced">Order Placed:</label>
            <input id="orderplaced" type="text" name="orderplaced"/>
            <label for="orderreceived">Order Received:</label>
            <input id="orderreceived" type="text" name="orderreceived"/>
            <label for="price">Price:</label>
            <input id="price" type="text" name="price"/>
            <label for="employeeid">Employee ID:</label>
            <input id="employeeid" type="text" name="employeeid"/>
            <label for="amounts">Amounts:</label>
            <input id="amounts" type="text" name="amounts"/>
            <label for="ingredientids">Ingredient IDs:</label>
            <input id="ingredientids" type="text" name="ingredientids"/>
            <label for="prices">Prices:</label>
            <input id="prices" type="text" name="prices"/>
            <input type="submit" value="Add Store Order" id="submit_button"/>
        </form>
    </div>

    <div class ="translate" id="google_translate_element"></div>
 
    <script type="text/javascript">
        function googleTranslateElementInit() {
            new google.translate.TranslateElement(
                {pageLanguage: 'en'},
                'google_translate_element'
            );
        }
    </script>
 
