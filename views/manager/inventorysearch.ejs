<!DOCTYPE html>
<head>
    <title>Inventory Search</title>
    <link id="StyleSheetID" rel = "stylesheet" href="\Main1.css">
</head>
<body>
    <div class="navbar">
        <img src="/pom_honey_logo.png" id="pom_logo">
        <a href="inventory"><div id="inventory">Inventory</div></a>
        <script>
            function StyleChange(){
              var link = document.getElementById("StyleSheetID"); 
              PageStyle = localStorage.getItem('CurrentStyle');
              if(PageStyle == 'Main1'){
                  link.setAttribute('href', '/Main1.css')
              }
              else if(PageStyle == 'Main2'){
                  link.setAttribute('href', '/Main2.css')
              }
              else if (PageStyle == null){
                  link.setAttribute('href', '/Main1.css')
                  localStorage.setItem('CurrentStyle', 'Main1');
              }
          }
          StyleChange();
          </script>
          <script>
            function button2(){
              var link = document.getElementById("StyleSheetID"); 
              if(link.getAttribute("href") == "/Main1.css"){
                link.setAttribute("href", "/Main2.css"); 
                localStorage.setItem('CurrentStyle', 'Main2');
              } 
              else if(link.getAttribute("href") == "/Main2.css"){
                link.setAttribute("href", "/Main1.css"); 
                localStorage.setItem('CurrentStyle', 'Main1');
              }
          }
        </script>   
          <a><button class="button_nav" onclick="button2()">Style Change</button></a>
    </div>

    <div id="form_wrapper">
        <form action="inventorysearch" method="post">
            <select id="inventoryattribute" name="inventoryattribute">
                <option value="ingredientid" name="attribute">ID</option>
                <option value="stock" name="attribute">Stock</option>
                <option value="laststocked" name="attribute">Last Stocked</option>
                <option value="stockstatus" name="attribute">Stock Status</option>
                <option value="unit" name="attribute">Unit</option>
                <option value="ingredientname" name="attribute">Name</option>
            </select>
            <label for="inventorysearch">Inventory Search</label>
            <input id="inventorysearch" type="text" name="inventorysearch"/>
            <input type="submit" value="Search" id = "submit"/>
        </form>
    </div>

    <div class ="translate" id="google_translate_element"></div>
 
    <script type="text/javascript">
        function googleTranslateElementInit() {
            new google.translate.TranslateElement(
                {pageLanguage: 'en'},
                'google_translate_element'
            );
        }
    </script>
 
